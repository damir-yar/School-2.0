<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:hint="Имя"
            android:textColorHint="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/reg_class"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Класс"
                android:textColorHint="@color/black"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/reg_symbol"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:hint="Буква"
                android:textColorHint="@color/black"
                android:textSize="25dp"/>

        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/reg_prof_not"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Нет профиля"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/reg_prof_tech"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Технологический"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/reg_prof_social"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="СоцЭконом"
                android:textSize="20dp"/>

        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="Войти"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>