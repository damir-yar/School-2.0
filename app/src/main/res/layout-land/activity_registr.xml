<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/reg_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-10dp"
                android:inputType="textPersonName"
                android:hint="Имя"
                android:textColorHint="@color/black"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="-10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/reg_class"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:hint="Класс"
                    android:textColorHint="@color/black"
                    android:textSize="25dp"/>

                <EditText
                    android:id="@+id/reg_symbol"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:hint="Буква"
                    android:textColorHint="@color/black"
                    android:textSize="25dp"/>

            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/reg_prof_not"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Нет профиля"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/reg_prof_tech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Технологический"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/reg_prof_social"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="СоцЭконом"
                    android:textSize="20dp"/>

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="Войти"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:text="Используя приложение вы соглашаетесь с "/>

        <Button
            android:id="@+id/usl"
            android:layout_marginTop="-11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:text="Условиями использования и Политикой конфиденциальности"/>

    </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>